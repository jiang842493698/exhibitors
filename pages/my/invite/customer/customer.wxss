/*>>名片联系  */

.link-crad {
  padding: 30rpx;
  margin-top: 20rpx;
  background-color: #fff;
  color: #333;
  display: none;
}

.link-crad-list {
}

.link-crad-item {
  display: flex;
  display: -webkit-flex;
  padding: 20rpx 0;
}

.l-item-h {
  padding: 20rpx;
  padding-left: 10rpx;
  /* width: 68rpx; */
}

.l-item-h i {
  font-size: 44rpx;
  color: #666;
}

.l-item-b {
  flex-grow: 1;
}

.l-item-b:hover {
  opacity: 0.2;
}

.l-item-b .l-b-top {
  font-size: 32rpx;
  color: #333;
  padding-bottom: 10rpx;
}

.l-item-b .l-b-bottom {
  font-size: 28rpx;
  color: #999;
}

.l-item-b-list {
  flex: 1;
}

.l-item-b-list .l-item-b {
  margin-top: 40rpx;
}

.l-item-b-list .l-item-b:first-child {
  margin-top: 0;
}

.l-item-f {
  padding-top: 20rpx;
}

.l-item-f i {
  font-size: 44rpx;
  color: #666;
}

