/*>>名片姓名  */

.info-crad {
  margin-top: 20rpx;
  padding: 30rpx;
  background-color: #fff;
  /* display: none; */
}

.info-crad .info-crad-head {
  display: flex;
  display: -webkit-flex;
}

.h-left {
  flex-grow: 1;
}

.h-name {
  margin-bottom: 10rpx;
}

.h-name label:first-child {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.h-name label:last-child {
  color: #666;
  font-size: 32rpx;
  margin-left: 10rpx;
}

.h-company {
  color: #666;
  font-size: 32rpx;
}

.h-right {
}

.h-right .collect {
  color: #6288d5;
}
.collect-wrap{
    margin-bottom: 10rpx;
}
.h-right i {
  transition: all 0.4s ease-in-out;
  -webkit-transition: all 0.4s ease-in-out;
  padding: 0 4rpx;
  font-size: 30rpx;
}

.h-right navigator {
  color: #6288d5;
}

.info-crad .info-crad-body {
  display: flex;
  display: -webkit-flex;
  margin: 36rpx 0;
}

.b-left {
  flex-grow: 1;
}

.b-left label {
  color: #6288d5;
  border: 1rpx solid #6288d5;
  padding: 4rpx 8rpx;
  font-size: 28rpx;
}

.b-right {
  color: #666;
  font-size: 32rpx;
}

.info-crad .info-crad-foot {
  display: flex;
  display: -webkit-flex;
}

.f-left {
  flex-grow: 1;
  position: relative;
  color: #666;
}

.f-left .active {
  color: #6288d5;
}

.icon-round {
  border-radius: 50%;
  text-align: center;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  float: left;
  margin-right: 20rpx;
}

.icon-round view {
  width: 100%;
}

.f-left i {
  font-size: 48rpx;
}

.badge {
  position: relative;
}

.badge .badge-count {
  display: flex;
  display: -webkit-flex;
  position: absolute;
  background-color: #ef9c64;
  color: #fff;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  font-size: 20rpx;
  right: -10rpx;
  top: -6rpx;
  text-align: center;
  border: 1rpx solid #ef9c64;
  align-items: center;
  justify-content: center;
}

.badge .badge-count view {
  width: 100%;
}

.f-right {
  text-align: right;
  margin-top: -34rpx;
}

.f-state {
  color: #57ac79;
  font-size: 30rpx;
  display: none;
}

.f-btn {
  color: #fff;
  background-color: #6288d5;
  padding: 14rpx 58rpx;
}

