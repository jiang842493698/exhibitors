.line::before {
  position: absolute;
  content: ' ';
  height: calc(100% + 10rpx);
  background: #a8bbe4;
  width: 4rpx;
  top: 40rpx;
  margin-left: 19rpx;
}

.line:last-child::before {
  opacity: 0;
}

