/* pages/customer/details/details.wxss */

/*>>名片图片  */

.agreed {
}

.agreed .business_crad-img image {
  display: inline-block !important;
}

.agreed .f-state, .agreed .link-crad {
  display: block !important;
}

.agreed .business_crad-img_not, .agreed .info-crad .f-btn {
  display: none !important;
}

.agreed .cord-image {
  display: block;
}

.business_crad {
  position: relative;
  height: 420rpx;
  background-color: #6288d5;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}

.cord-image {
  display: none;
  height: 420rpx;
  padding-top:30rpx; 
}

.cord-image image {
  width: 620rpx;
  height: 350rpx;
}

.business_crad .business_crad-img image {
  display: none;
}

.business_crad-img_not {
  width: 615rpx;
  height: 348rpx;
  background-color: #eee;
  color: #6288d5;
  margin: 0 auto;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: center;
}

.business_crad-img_not view {
  justify-content: center;
}

.business_crad-img_not view:first-child {
  font-size: 40rpx;
}

.business_crad .business_crad-img image {
  width: 615rpx;
  height: 348rpx;
  /* background-color: #000; */
  box-shadow: 0 0 100rpx -20rpx #000;
}

.business_crad-collection {
  color: #fff;
}

.business_crad-collection i {
  padding-right: 16rpx;
}

