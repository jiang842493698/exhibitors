.filter {
    top: 0;
    background-color: #fff;
    display: flex;
    padding: 20rpx 30rpx;
    font-size: 28rpx;
    color: #333;
    position: fixed;
    width: 100%;
    z-index: 1;
    box-shadow: 0 0 10rpx rgba(174, 174, 174, .4);
    box-sizing: border-box;
}

.filter:after {
    content: "";
    position: absolute;
    display: block;
    width: 20rpx;
    height: 1900rpx;
    top: -896rpx;
    margin-top: 40rpx;
    background-size: 60rpx 20rpx;
    transform: rotate(-90deg);
}

.filter:after {
    background-position: 100% 15%;
    background-image: linear-gradient(-45deg, #fff 25%, transparent 25%, transparent), linear-gradient(-135deg, #fff 25%, transparent 25%, transparent), linear-gradient(-45deg, transparent 75%, #fff 75%), linear-gradient(-135deg, transparent 75%, #fff 75%);
}

.filter-item {
    margin: auto;
    align-items: center;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 50rpx;
    width: 120rpx;
}

.filter-item text {
    text-align: center;
}

.filter .selected {
    background-color: #6288d5;
    color: #fff;
}

.page-body {
    margin-top: 120rpx;
}

.schedule {
    background-color: #fff;
    height: 100%;
    position: absolute;
    margin: 0 auto;
    width: 100%;
}

.title {
    text-align: center;
    margin: 0 30rpx;
    padding-top: 24rpx;
    padding-bottom: 24rpx;
    position: relative;
    font-size: 24rpx;
    color: #999;
}

.title::before {
    content: '';
    position: absolute;
    border: 1rpx solid #f5f5f5;
    width: 44%;
    left: 0;
    top: 38rpx;
}

.title::after {
    content: '';
    position: absolute;
    border: 1rpx solid #f5f5f5;
    width: 44%;
    right: 0;
    top: 38rpx;
}

.time {
    padding: 0 30rpx;
}

.tiem-row {
    /* display: -webkit-flex; */
    align-items: center;
}

.time-item {
    /* flex-grow: 1; */
    text-align: center;
    display:inline-block;
    font-size: 28rpx;
    color: #6288d5;
    position: relative;
    margin-right: 12rpx;
    margin-bottom: 12rpx;
    background-color: #f2f3f5;
    height: 160rpx;
    width: 23%;
    /* display: flex; */
    align-items: center;
    justify-content: center;
    transition: all .4s ease-in-out;
    overflow: hidden;
}
.time-content{
  padding-top: 25rpx; 
}
.time-item::after{
    transition: all .4s ease-in-out;
}
.time-item:last-child {
    margin-right: 0;
}

.lock {
    background-color: #9fa4ad;
    color: #fff;
}

.lock::after {
    content: '';
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background-color: #6288d5;
    position: absolute;
    top: -40rpx;
    right: -40rpx;
}

.lock::before {
    content: '\e649';
    font-family: "iconfont" !important;
    font-size: 18rpx;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    position: absolute;
    top: 6rpx;
    right: 6rpx;
    z-index: 1;
}