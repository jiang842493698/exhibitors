.tab {
  margin-top: 20rpx;
  padding: 30rpx;
  background-color: #fff;
}

.tab .tab-h {
  display: flex;
  display: -webkit-flex;
}

.tab-item {
  flex: 1;
  text-align: center;
}

.tab-item label {
  padding: 8rpx 0;
  font-size: 36rpx;
  transition: color 0.4s ease-in-out;
  -webkit-transition: color 0.4s ease-in-out;
  cursor: pointer;
}

.tab .selected label {
  border-bottom: 6rpx solid #6288d5;
  color: #6288d5;
}

.tab-b {
