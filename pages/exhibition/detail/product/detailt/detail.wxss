

.swiper {
    min-height: 500rpx;
    background: #fff;
  }
  
  .swiper image {
    width: 100%;
    height: 500rpx;
  }
  
  .p-item {
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
  }
  
  .product-title {
    font-size: 36rpx;
    padding: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    background: #fff;
  }
  
  .swiper swiper-item {
    min-height: 500rpx;
  }
  
  .indicator {
    position: absolute;
    right: 30rpx;
    top: 440rpx;
    opacity: 0.6;
    color: #fff;
    font-size: 20rpx;
    border-radius: 15rpx;
    background: #999;
    height: 30rpx;
  }
  
  .indicator label {
    padding: 10rpx;
    line-height: 1.5;
  }
  .product-introduce{
    margin-top:20rpx; 
    padding: 30rpx;
    background: #fff;
  }
  .p-introduce-title{
    text-align: center;
    font-size: 30rpx;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #ddd;
  }
  .p-introduce-body{
    padding-top: 20rpx;
  }
  .page-foot {
    margin-top: 100rpx;
  }
  
  .page-foot .btn {
    background: #6288d5;
    color: #fff;
    padding: 20rpx;
    border-radius: 5rpx;
    margin: 30rpx;
    text-align: center;
    font-size: 36rpx;
    line-height: inherit;
    height: inherit;
    
  }
  