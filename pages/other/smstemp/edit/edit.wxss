/**=====================cell======================**/

.cell {
    position: relative;
    padding-top: 14rpx;
    line-height: 2.7;
    font-size: 34rpx;
}

.cell-title {
    padding-left: 30rpx;
    font-size: 28rpx;
    color: #888;
}

.cell-list {
    background-color: #fff;
    border-top: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
}

.cell-item {
    position: relative;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #e5e5e5;
    padding-left: 30rpx;
    padding-right: 30rpx;
    background-color: #fff;
}

.cell-header {
    padding-right: 54rpx;
}

.cell-header i {
    color: #6288d5;
}

.cell-body {
    flex: 1;
    font-size: 32rpx;
}

.cell-footer {
    text-align: right;
    color: #999;
}


/*
